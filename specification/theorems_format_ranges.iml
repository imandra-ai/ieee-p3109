theorem thm_within_format_range (f : Format.t) (x : Float8.t) =
  is_within_range f x
  [@@by
    [%use thm_format_range_p7 f x] @>
    [%use thm_format_range_p6 f x] @>
    [%use thm_format_range_p5 f x] @>
    [%use thm_format_range_p4 f x] @>
    [%use thm_format_range_p3 f x] @>
    [%use thm_format_range_p2 f x] @>
    [%use thm_format_range_p1 f x] @>
    unroll 0]
  [@@timeout 10]

