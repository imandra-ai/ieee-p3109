theorem thm_within_format_range (x : t) (fmt : Format.t) =
  is_within_range x fmt
  [@@by
    [%use thm_fmt_range_p7 x fmt] @>
    [%use thm_fmt_range_p6 x fmt] @>
    [%use thm_fmt_range_p5 x fmt] @>
    [%use thm_fmt_range_p4 x fmt] @>
